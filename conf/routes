# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Page d'acceuil pour les visiteurs
GET     /                               controllers.HomeController.index()

# CRUD table client
GET     /client                         controllers.ClientController.getClientsAll()
GET     /client/:clientId               controllers.ClientController.getClientById(clientId: Long)
POST    /client                         controllers.ClientController.save(request:Request)
PUT     /client/:clientId               controllers.ClientController.updateClient(request:Request, clientId: Long)

# CRUD table achat
GET     /achat                         controllers.AchatController.getAll()
GET     /achat/:achatId               controllers.AchatController.getById(achatId: Long)
POST    /achat                         controllers.AchatController.save(request:Request)
PUT     /achat/:achatId               controllers.AchatController.update(request:Request, achatId: Long)

# CRUD table catProduit
GET     /catProduit                         controllers.CatProduitController.getAll()
GET     /catProduit/:catProduitId               controllers.CatProduitController.getById(catProduitId: Long)
POST    /catProduit                         controllers.CatProduitController.save(request:Request)
PUT     /catProduit/:catProduitId               controllers.CatProduitController.update(request:Request, catProduitId: Long)

# CRUD table Commande
GET     /commande                         controllers.CommandeController.getAll()
GET     /commande/:idCommande               controllers.CommandeController.getById(idCommande: Long)
POST    /commande                         controllers.CommandeController.save(request:Request)
PUT     /commande/:idCommande               controllers.CommandeController.update(request:Request, idCommande:Long)

# CRUD table Vente
GET     /vente                         controllers.VenteController.getAll()
GET     /vente/:idVente               controllers.VenteController.getById(idVente: Long)
POST    /vente                         controllers.VenteController.save(request:Request)
PUT     /vente/:idVente               controllers.VenteController.update(request:Request, idVente:Long)

# CRUD table Sortie
GET     /sortie                         controllers.SortieController.getAll()
GET     /sortie/:idSortie               controllers.SortieController.getById(idSortie: Long)
POST    /sortie                         controllers.SortieController.save(request:Request)
PUT     /sortie/:idSortie               controllers.SortieController.update(request:Request, idSortie:Long)

# CRUD table Fournisseur
GET     /fournisseur                         controllers.FournisseurController.getAll()
GET     /fournisseur/:idFournisseur               controllers.FournisseurController.getById(idFournisseur: Long)
POST    /fournisseur                         controllers.FournisseurController.save(request:Request)
PUT     /fournisseur/:idFournisseur               controllers.FournisseurController.update(request:Request, idFournisseur:Long)

# CRUD table Livraison
GET     /livraison                         controllers.LivraisonController.getAll()
GET     /livraison/:idLivraison               controllers.LivraisonController.getById(idLivraison: Long)
POST    /livraison                         controllers.LivraisonController.save(request:Request)
PUT     /livraison/:idLivraison               controllers.LivraisonController.update(request:Request, idLivraison:Long)



